#!/bin/bash

WHAT=$1

# no checks here, be careful!
TFILE=$HOME/myshinytomb
KFILE=$HOME/myshinytomb.key

SANDTOMB=`which sandtomb`
THUNDERBIRD=`which thunderbird`
FIREFOX=`which firefox`
TOMBIN=`which tomb`

$TOMB list "`basename $TFILE`" &> /dev/null

if [ $? -eq 1 ]; then
	$TOMBIN open $TFILE
fi

TOMBMOUNT="/media/${TFILE}"

if [ "$WHAT" == "thunderbird" ]; then
	sudo $SANDTOMB --mountpoint ${TOMBMOUNT} --profile thunderbird $THUNDERBIRD
elif [ "$WHAT" == "firefox" ]; then
	sudo $SANDTOMB --mountpoint ${TOMBMOUNT} --profile firefox $FIREFOX
fi
